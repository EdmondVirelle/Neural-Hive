{
    "name": "neural-hive",
    "version": "1.0.0",
    "description": "AI Agent Orchestrator - A graphical command center for managing multiple AI CLI tools",
    "type": "module",
    "main": "dist/electron/electron/main.js",
    "scripts": {
        "dev": "concurrently \"vite\" \"tsc -p tsconfig.node.json --watch\"",
        "dev:electron": "electron .",
        "build": "vue-tsc && vite build && tsc -p tsconfig.node.json",
        "build:electron": "electron-builder",
        "preview": "vite preview",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui",
        "lint": "eslint src electron --ext .ts,.vue",
        "lint:fix": "eslint src electron --ext .ts,.vue --fix",
        "typecheck": "vue-tsc --noEmit && tsc -p tsconfig.node.json --noEmit"
    },
    "dependencies": {
        "@vueuse/core": "^14.1.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-vue-next": "^0.562.0",
        "pidusage": "^4.0.1",
        "pinia": "^2.1.7",
        "radix-vue": "^1.9.17",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7",
        "vue": "^3.4.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/pidusage": "^2.0.5",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vitest/coverage-v8": "^1.2.0",
        "@vitest/ui": "^1.2.0",
        "@vue/test-utils": "^2.4.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "^8.2.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "eslint": "^8.56.0",
        "eslint-plugin-vue": "^9.20.0",
        "jsdom": "^24.0.0",
        "node-pty": "^1.0.0",
        "postcss": "^8.4.0",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^1.2.0",
        "vue-tsc": "^3.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "author": "Neural Hive Team",
    "license": "MIT",
    "keywords": [
        "ai",
        "agent",
        "orchestrator",
        "cli",
        "electron",
        "vue",
        "terminal"
    ],
    "build": {
        "appId": "com.neuralhive.app",
        "productName": "Neural Hive",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "config/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "scripts/",
                "to": "scripts/",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Development"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": [
                "nsis"
            ]
        }
    }
}